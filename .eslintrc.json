{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": "airbnb-base",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"no-console": ["error", {"allow" : ["warn", "error", "log"]}],
		"no-tabs": ["error", {"allowIndentationTabs": true}],
		"indent": [2, "tab"],
		"linebreak-style": 0,
		"no-plusplus": 0,
		"no-confusing-arrow": 0,
		"no-unused-expressions": 0
	}
}
